<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4e8b8"
    tools:context=".Fragment.BichosFragment"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/cao"
        app:layout_constraintBottom_toTopOf="@+id/imageLion"
        app:layout_constraintEnd_toStartOf="@+id/imageCat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/imageLion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/leao"
        app:layout_constraintBottom_toTopOf="@+id/imageSheep"
        app:layout_constraintEnd_toEndOf="@+id/imageDog"
        app:layout_constraintStart_toStartOf="@+id/imageDog"
        app:layout_constraintTop_toBottomOf="@+id/imageDog" />

    <ImageView
        android:id="@+id/imageSheep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ovelha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageDog"
        app:layout_constraintStart_toStartOf="@+id/imageDog"
        app:layout_constraintTop_toBottomOf="@+id/imageLion" />

    <ImageView
        android:id="@+id/imageCat"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/gato"
        app:layout_constraintBottom_toTopOf="@+id/imageMonk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageDog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/imageMonk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/macaco"
        app:layout_constraintBottom_toTopOf="@+id/imageCow"
        app:layout_constraintEnd_toEndOf="@+id/imageCat"
        app:layout_constraintStart_toStartOf="@+id/imageCat"
        app:layout_constraintTop_toBottomOf="@+id/imageCat" />

    <ImageView
        android:id="@+id/imageCow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vaca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageMonk"
        app:layout_constraintStart_toStartOf="@+id/imageMonk"
        app:layout_constraintTop_toBottomOf="@+id/imageMonk" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/direitos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>